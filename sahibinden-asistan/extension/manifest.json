{
    "manifest_version": 3,
    "name": "Smart Buyer Assistant",
    "version": "1.0",
    "description": "Analyzes real estate/car listings and tracks price history.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ]
}