{
  "manifest_version": 3,
  "name": "Sahibinden AI Asistan (BAI Bilmiş)",
  "version": "1.0",
  "description": "Sahibinden.com ilanlarını yapay zeka ile analiz eder ve Google ile giriş sağlar.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "1025920967974-67v172dj822e60elm4722g2egr8suc67.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "host_permissions": [
    "https://*.sahibinden.com/*",
    "https://sahiden.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.sahibinden.com/ilan/*"],
      "js": ["content.js"]
    }
  ]
}
