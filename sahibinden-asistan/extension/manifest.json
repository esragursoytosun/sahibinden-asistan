{
  "manifest_version": 3,
  "name": "Sahibinden AI Asistan (BAI Bilmiş)",
  "version": "1.0",
  "description": "Sahibinden.com ilanlarını yapay zeka ile analiz eder.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity" 
  ],
  "oauth2": {
    "client_id": "1025920967974-1j01rfg3911cnsp58kaa2orh95fq26kv.apps.googleusercontent.com",
    "scopes": [
      "openid", "email", "profile"
    ]
  },
  "host_permissions": [
    "https://*.sahibinden.com/*",
    "https://sahiden.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.sahibinden.com/ilan/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

